---
import type { ImageMetadata } from "astro";
import { getImage } from "astro:assets";

interface Props {
	imgUrl: string | ImageMetadata;
	alt: string;
}

const { imgUrl, alt } = Astro.props;

const img = await getImage({
	src: imgUrl,
	format: "webp",
	width: 960,
	height: 480,
});
console.log();
---

<img src={img.src} alt={alt} width="960" height="480" />
